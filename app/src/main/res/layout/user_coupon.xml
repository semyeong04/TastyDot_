<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clCoupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgUserCoupon"
            android:layout_width="136dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tastydot" />

        <TextView
            android:id="@+id/tvUserCouponMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanumsquareaceb"
            android:text="1000"
            android:textColor="#D2FF5722"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imgUserCoupon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/nanumsquareaceb"
            android:text="사용 기간"
            android:textColor="#80000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvCouponStore"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvCouponStore"
            app:layout_constraintTop_toBottomOf="@+id/tvCouponStore" />

        <TextView
            android:id="@+id/tvCouponStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareeb"
            android:text="은선식당"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvUserCouponMoney"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvUserCouponMoney"
            app:layout_constraintTop_toBottomOf="@+id/tvUserCouponMoney" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareacr"
            android:text="원 쿠폰"
            android:textColor="#D2FF5722"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserCouponMoney"
            app:layout_constraintStart_toEndOf="@+id/tvUserCouponMoney"
            app:layout_constraintTop_toTopOf="@+id/tvUserCouponMoney"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvCouponDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/nanumsquareacr"
            android:text="2024.06.30"
            android:textColor="#80000000"
            app:layout_constraintBottom_toBottomOf="@+id/textView51"
            app:layout_constraintStart_toEndOf="@+id/textView51"
            app:layout_constraintTop_toTopOf="@+id/textView51"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareacl"
            android:text="까지"
            android:textColor="#80000000"
            app:layout_constraintBottom_toBottomOf="@+id/tvCouponDate"
            app:layout_constraintStart_toEndOf="@+id/tvCouponDate"
            app:layout_constraintTop_toTopOf="@+id/tvCouponDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>